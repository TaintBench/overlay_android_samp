<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerVertical="true">
        <ImageView android:id="@+id/android_logo" android:paddingBottom="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/android" android:layout_centerHorizontal="true"/>
        <TextView android:gravity="center_horizontal" android:id="@+id/update_text" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/update" android:layout_below="@+id/android_logo"/>
        <ProgressBar android:id="@+id/loading_spinner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/update_text" android:layout_centerHorizontal="true" style="?android:attr/progressBarStyleLarge"/>
    </RelativeLayout>
</RelativeLayout>
